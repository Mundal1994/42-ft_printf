void	print_result(int result, int mine)
{
	printf(CYAN"return expected [%d] : [%d]\n"UNCOLOR, result, mine);
}

void	print_OK(int result)
{
	if (result != 0)
		printf(RED"				KO!\n\n"UNCOLOR);
	else
		printf(GREEN"				OK!\n\n"UNCOLOR);
}
